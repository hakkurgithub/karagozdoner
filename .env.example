# --- Supabase Konfigürasyonu ---
# Supabase Proje Ayarları > API bölümünden alınır
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Veritabanı Bağlantı Dizisi (Transaction Pooler - Port 6543 veya Session - Port 5432)
# Prisma veya doğrudan postgres bağlantısı kullanılıyorsa gereklidir
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# --- NextAuth Konfigürasyonu ---
# Token şifreleme için gizli anahtar (openssl rand -base64 32 ile üretilebilir)
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# --- Uygulama Ayarları ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=guclu_bir_sifre